# AWS Region
region = "eu-west-1"

# Project configuration
project_name = "aws-certbot-lambda"
environment  = "prod"

# Let's Encrypt configuration
acme_email = "admin@example.com"
domains    = ["example.com", "*.example.com"]

# Route53 Hosted Zone ID
hosted_zone_id = "Z1234567890ABC"

# Use staging environment for testing (set to false for production)
acme_use_staging = true

# Renewal configuration
renewal_days_before_expiry = 30

# Check schedule (every 12 hours)
schedule_expression = "rate(12 hours)"

# Notifications
enable_notifications = true
notification_email   = "admin@example.com"

# ACME account key persistence (recommended: true for production)
acme_persist_account_key = true

# Additional tags
additional_tags = {
  Owner = "DevOps"
}
